<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>To Do list</title>
    <link rel="stylesheet" href="css/styles.css">
  </head>
  <body>
    <div class="box" id="heading">
      <h1> <%= kindOfDay %> </h1>
    </div>

    <div class="box">

        <% item.forEach(function(element){%>
          <form action="/delete" method="post">
          <div class="item">

            <input type="checkbox" name="checkbox" value="<%=element._id%>" onChange="this.form.submit()">
              <p> <%= element.name %> </p>
              <input type="hidden" name="hiddenName" value="<%=kindOfDay%>">
          </div>
          </form>
          <%})%>




        <form class="item" action="/" method="post">

          <input type="text" name="items" placeholder="New Item" autocomplete="off">
          <button type="submit" name="button" value="<%=kindOfDay%>">+</button>
        </form>

    </div>



  </body>
</html>
